{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "rootDir": null,
    "isolatedDeclarations": false,
    "noEmit": true,
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "opensrc"
  ]
}
